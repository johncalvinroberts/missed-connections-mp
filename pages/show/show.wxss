/* pages/show/show.wxss */
.header {
  text-align: center;
  align-content: center;
  height:180px;
  display: block;
  padding-bottom: 35rpx;
}
.h2-flash {
  font-size: 18px; 
  color:#F95959;
  font-weight:700;
  margin-bottom: 20rpx;
}
.h2-flash text {
  box-shadow:inset 0px -7px rgba(170, 170, 170, 0.7);
}
.userinfo-avatar {
  width:180rpx;
  height:180rpx;
  margin:20rpx;
  margin-top:40rpx;
  border-radius:50%;
  border: 3px solid white;
}
.userinfo-nickname {
  display: block;
  text-align: center;
}
.post-time {
  display: block;
  text-align: center;
  color: white;
  font-size:14px;
  margin-top:20rpx;
  margin-bottom:20rpx;
} 
.wrap {
  padding: 40rpx 40rpx 0rpx 40rpx;
  min-height: 70px;
  display: block;
  text-align:center;
}
.border {
  border:5px solid #aaa;
  width: 97%;
  height:240px;
}

.share-btn {
  margin-top: 20px;
  margin-bottom: 20px;
}

