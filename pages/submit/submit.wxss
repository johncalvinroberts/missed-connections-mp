/* /pages/submit/submit.wxss */
.container-form {
  height: 100%;
  align-items: center;
  box-sizing: border-box;
  background-color:#F4F4F4;
}
.wrap {
  padding:40rpx 40rpx;
  text-align: left;
}
.caption {
  color:#AAAAAA;
  font-size:15px;
  text-align:center;
}

/* form style */
.user-input {
  margin-bottom:25rpx;
}
.input-height {
  height: 11em;
}
textarea {
  padding: 10rpx 0;
  font-size: 15px;
  color: #AAAAAA;
}
.text-area-wrp {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #AAAAAA;
}

.h2-header text {
   box-shadow:inset 0px -7px rgba(170, 170, 170, 0.7);
   font-size:23px;
}