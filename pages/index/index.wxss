/**index.wxss**/
.wrap-welcome {
  width: 100%;
  height: 250rpx;
  background-color: #F95959;
  color: white;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 23px;
}
.wrap-welcome text {
   box-shadow:inset 0px -10px rgba(170, 170, 170, 0.7);
}
.container-cards {
  height: 100%;
  padding: 40rpx;
  display: block;
}

.card {
  background-color: white;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  /*border-top: solid 1rpx red;*/
  padding: 20rpx;
  box-shadow: 0 1px 23px -5px rgba(10, 10, 10, .3);
  
}

.post-body-text {
  color: #2C2C2C;
  font-size: 15px;
  line-height: 1em;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 0rpx 20rpx;
}

.userinfo-avatar {
  width: 65rpx;
  height: 65rpx;
  /*margin: 20rpx;*/
  border-radius: 50%;
}

.userinfo-nickname {
  color: #6D6D6D;
  font-size: 12px;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
}
