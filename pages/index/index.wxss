/**index.wxss**/
.wrap-welcome {
  width: 100%;
  height: 250rpx;
  background-color: #F95959;
  color: white;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 23px;
}

.container-cards {
  height: 100%;
  padding: 40rpx;
}

.card {
  background-color: #E3E3E3;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border-top: solid 1rpx white;
  padding: 20rpx;
}


.post-card {
  margin-top: 20rpx;
  font-size: 15px;
  padding-top: 5px;
}

.post-body-text{
  color: #000;
}

