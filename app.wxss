/**app.wxss**/
page {
  font-family: Arial, Helvetica, sans-serif;
  background-color: #F4F4F4;
}
.container {
  height: 100%;
  box-sizing: border-box;
  margin: 0 0;
}
.header {
  display:flex;
  align-items: center;
  justify-content: center;
  height: 100px;
  background-color:#F95959;
  color: white;
  font-weight:700;
  border-bottom: 0.2px solid white;
}
.wrap-cta {
  position: absolute;
}
.submit-cta {
  background-color: #F65A5D;
  color: white;
  padding: 20rpx 20rpx;
  margin-top:12px;
  border-radius: 100%;
  width: 40px;
  height: 40px;
  text-align: center;
  vertical-align: center;
  font-weight: bolder;
  font-size:39px;
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
}
.plus-sign {
  background-color: #fff;
  width: 40rpx;
  height: 40rpx;
  display: block;
  background: linear-gradient(to bottom, transparent 35%, #fff 35%, #fff 65%,  transparent 65%), linear-gradient(to right, transparent 35%, #fff 35%, #fff 65%, transparent 65%);
  margin: 0 auto;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.h2-flash {
  font-size: 18px; 
  color:#F95959;
  font-weight:700;
  margin-bottom: 20rpx;
}
.desc{
  font-size: 15px;
  color: #2C2C2C;
}